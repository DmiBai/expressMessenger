doctype html
head
    meta(charset="UTF-8")
    style
        include ../public/stylesheets/style.css
    meta(name = name = "viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet', href='/bootstrapMain.css', type='text/css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    title #{title}
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
body
    header
        if auth
            button(onclick="document.cookie = 'username=123';window.location.reload();" class=" btn btn-primary") EXIT
            div(class="username") !{auth}
        else
            button(onclick="window.location.href ='/register'" class=" btn btn-primary")  SIGN UP
            button(onclick="window.location.href ='/auth'" class=" btn btn-primary") SIGN IN


p
    if auth
        div(style="margin-top:50px")
            button(id="blockbutton" class="button") block
            button(id="unblockbutton" class="button") unblock
            button(id="deletebutton" class="button") delete

        if dbData
        table(class="table table-black table-striped")
            thead
                tr
                    th username
                    th registration
                    th
                        input(type="checkbox" id="checkallbox")
            tbody
                -var i = 0;
            each data in dbData
                - i++;
                tr
                    th(id="user"+i name=data.Username) !{data.Username}
                    th !{data.RegistrationDate.toLocaleString()}
                    th
                        input(type="checkbox" id="checkbox"+i class="checkbox")
    script
        include ../public/javascripts/checkboxes.js
        include ../public/javascripts/buttons.js